				<artifactId>maven-jar-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>buildnumber-maven-plugin</artifactId>
			</plugin>
		</plugins>
	</build>
	<profiles>
		<profile>
			<id>release</id>
			<properties>
				<probe.version>${project.version}</probe.version>
				<buildNumber.doCheck>true</buildNumber.doCheck>
				<buildNumber.doUpdate>true</buildNumber.doUpdate>
			</properties>
		</profile>
		<profile>
			<id>development</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<properties>
				<probe.version>${project.version} (r${buildNumber} ${timestamp})</probe.version>
				<buildNumber.doCheck>false</buildNumber.doCheck>
				<buildNumber.doUpdate>false</buildNumber.doUpdate>
			</properties>
		</profile>
	</profiles>
